	<permissions>
		<permission cmd="admin" permission_level="0" /><!-- admin control -->
		<permission cmd="aiddebug" permission_level="0" /> <!-- Toggles AIDirector debug output. -->
		<permission cmd="ban" permission_level="10" /> <!-- Bans user -->
		<permission cmd="cc" permission_level="10" /> <!-- Shows all loaded chunks in cache -->
		<permission cmd="cp" permission_level="0" /> <!-- command permission control -->
		<permission cmd="dm" permission_level="0" /> <!-- Enables/disables debug menu -->
		<permission cmd="es" permission_level="0" /> <!-- enablescope toggle debug scope -->
		<permission cmd="go" permission_level="0" /> <!-- gameover sets the game state to GameOver -->
		<permission cmd="kick" permission_level="10" /> <!-- Kicks user -->
		<permission cmd="le" permission_level="0" /> <!--  List all entities -->
		<permission cmd="lp" permission_level="10" /> <!-- List all players -->
		<permission cmd="lt" permission_level="0" /> <!-- listthreads lists all threads -->
		<permission cmd="say" permission_level="10" /> <!-- Sends a message to all connected clients -->
		<permission cmd="sc" permission_level="0" /> <!-- showchunkdata shows some date of the current chunk -->
		<permission cmd="se" permission_level="10" /> <!-- Spawn entity -->
		<permission cmd="shutdown" permission_level="0" /> <!-- Shut down the game -->
		<permission cmd="sg" permission_level="0" /> <!-- setgamepref sets a game pref -->
		<permission cmd="sounddebug" permission_level="0" /> <!-- Toggles SoundManager debug output. -->
		<permission cmd="spawnwanderinghorde" permission_level="10" /> <!-- Spawns a wandering horde of zombies -->
		<permission cmd="st" permission_level="10" /> <!-- Set the time -->
		<permission cmd="mem" permission_level="0" /> <!-- Print information about current memory consumption of the server and call garbage collector -->
		<permission cmd="mod" permission_level="0" /> <!-- mod control -->
		<permission cmd="whitelist" permission_level="0" /> <!-- whitelist control -->
		<!-- <permission cmd="" permission_level="0" /> -->
	</permissions>

